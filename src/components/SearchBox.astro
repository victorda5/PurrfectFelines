<form autocomplete="off" class="mt-6 sm:mt-12" >   
    <label for="search-box" class="mb-2 text-sm font-medium sr-only text-white">Search</label>
    <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg class="w-4 h-4 text-text2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
            </svg>
        </div>
        <input type="search" id="search-box" class="focus:ring-2 ring-accent focus:outline-0 block w-full p-4 pl-10 text-sm rounded-lg bg-darkbg2 text-white placeholder:text-neutral-400" placeholder="Search cats by breed" required>
    </div>
</form>

<script>
    const searchBox: HTMLInputElement = document.getElementById("search-box") as HTMLInputElement;
    const anchorContainer: HTMLElement = document.getElementById("anchor-container");
    
    searchBox.addEventListener("input", function() {
      const searchTerm: string = searchBox.value.toLowerCase();
      const links: NodeListOf<HTMLAnchorElement> = anchorContainer.querySelectorAll("a");
    
      links.forEach(function(link: HTMLAnchorElement) {
        const linkId: string = link.id.toLowerCase();
        if (linkId.includes(searchTerm)) {
          link.style.display = "block";
        } else {
          link.style.display = "none";
        }
      });
    });
</script>