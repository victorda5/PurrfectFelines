---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 Not Found">
  <Header />
  <section class="flex items-center justify-center flex-col gap-8 font-bold align-middle pt-20">
    <div class="text-center">
      <h1 class="text-4xl bold">Error 404</h1>
      <h2 class="text-xl mt-1 text-text2">Website not found</h2>
    </div>
    <div class="bg-darkbg2 h-[300px] w-[300px] rounded-lg">
      <video src="404cat.mp4" autoplay muted loop class="w-[300px] h-[300px] rounded-lg" />
    </div>
    <a href="/" class="py-2 px-20 rounded-md border-2 border-accent">Go back</a>
  </section>
</Layout>